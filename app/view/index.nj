<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mew Link</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=PT+Sans:ital,wght@0,400;0,700;1,400;1,700&display=swap');
    </style>
    <style>
        html,
        body {
            margin: 0;
            padding: 0;
        }

        html {
            width: 100vh;
            height: 100vh;
            font-family: 'PT Sans', sans-serif;
        }

        body {
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: rgba(102, 102, 255, 0.1);
        }

        h1 {
            margin: 0;
            padding: 0;
        }

        h1.title {
            font-size: 50px;
            font-weight: 700;
            font-style: normal;
            color: rgba(102, 102, 255, 0.8);
            text-shadow: 5px 5px 15px rgba(102, 102, 255, 0.4);
        }

        form {
            display: flex;
            flex-direction: column;
            margin-top: 20px;
        }

        input {
            appearance: none;
            outline: none;
            border: none;
            border-radius: 8px;
            font-size: 18px;
            font-family: 'PT Sans', sans-serif;
            width: 350px;
            margin: 5px 0;
            padding: 20px 15px;
            background-color: rgba(102, 102, 255, 0.2);
            border: 2px solid rgba(102, 102, 255, 0.5);
            backdrop-filter: blur(20px);
            transition: all .3s;
        }

        input[type="text"] {
            color: rgba(102, 102, 255, 1);
        }

        input[type="text"]::-webkit-input-placeholder {
            color: rgba(102, 102, 255, 0.7);
        }

        input[type="submit"] {
            width: 100%;
            margin-top: 10px;
            padding: 10px 15px;
            font-size: 22px;
            font-weight: 700;
            cursor: pointer;
            color: rgba(102, 102, 255, 0.7);
        }

        input[type="text"]:focus,
        input[type="submit"]:hover {
            box-shadow: 0px 0px 40px 3px rgba(102, 102, 255, 0.25);
        }

        .main {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
    </style>
</head>

<body>
    <div class="main">
        <h1 class="title">Mew Link</h1>
        <form id="genForm" action="/url" method="post" enctype="multipart/form-data" onsubmit="generateNewMLink()">
            <input type="text" name="original_url" placeholder="Original URL..." autocomplete="off">
            <input type="submit" value="Generate">
        </form>
    </div>

    <script>
        function getCookie(name) {
            var arr, reg = new RegExp("(^| )" + name + "=([^;]*)(;|$)");
            if (arr = document.cookie.match(reg))
                return unescape(arr[2]);
            else
                return null;
        }

        let form = document.getElementById('genForm');
        form.onsubmit = function (e) {
            e.preventDefault();
            fetch(e.target.action, {
                method: "POST",
                mode: 'cors',
                headers: {
                    'Content-Type': 'application/json',
                    'x-csrf-token': getCookie('csrfToken')
                },
                body: JSON.stringify({
                    'original_url': e.target.original_url.value
                })
            });
            return false;
        };
    </script>
</body>

</html>